<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="@drawable/background" android:id="@+id/ID_LinearLayout">
    <TextView android:background="#2200F0F0" android:textColor="#000000" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/ID_TextView" android:text="아이디를 입력하세요" android:layout_marginTop="30dp" android:layout_width="match_parent" android:gravity="center" android:layout_marginBottom="10dp"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ID_EditText" android:singleLine="true" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:background="#2200F0F0" android:textColor="#000000" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="match_parent" android:gravity="center" android:layout_marginTop="20dp" android:text="비밀번호를 입력하세요" android:layout_marginBottom="10dp" android:id="@+id/PW_TextView"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:inputType="textPassword" android:id="@+id/PW_EditText" android:singleLine="true" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"></EditText>
    <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_width="match_parent" android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginBottom="10dp" android:background="#2200F0F0" android:id="@+id/Nick_TextView" android:text="별명을 입력하세요"></TextView>
    <EditText android:layout_marginRight="15dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:singleLine="true" android:layout_marginLeft="15dp" android:id="@+id/Nick_EditText" android:layout_marginBottom="30dp"></EditText>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="회원 가입" android:id="@+id/New_Join_Button"></Button>
    
</LinearLayout>
